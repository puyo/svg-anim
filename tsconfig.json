{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*",
    "node_modules/phaser/typescript/**/*"
  ]
}
